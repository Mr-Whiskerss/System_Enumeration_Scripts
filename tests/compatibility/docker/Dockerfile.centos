FROM centos:7

# Install basic utilities for RHEL-based systems
RUN yum install -y \
    bash \
    coreutils \
    net-tools \
    iproute \
    procps-ng \
    lsof \
    findutils \
    grep \
    sed \
    gawk \
    && yum clean all

# Create a test user
RUN useradd -m -s /bin/bash testuser

WORKDIR /test

# Copy the script
COPY Linux_Basic_Enumerator_V1.0.sh /test/

RUN chmod +x /test/Linux_Basic_Enumerator_V1.0.sh

# Run as non-root user
USER testuser

CMD ["/bin/bash", "/test/Linux_Basic_Enumerator_V1.0.sh"]
